extends layout

block content
  .form-container
    h1 Criar Nova UC
    form(method='POST', action='/ucs')
      label(for='sigla') Sigla:
      input(type='text', id='sigla', name='sigla' required)

      label(for='titulo') Título:
      input(type='text', id='titulo', name='titulo' required)

      label(for='docentes') Docentes:
      input(type='text', id='docentes', name='docentes' placeholder='Separados por vírgula' required)

      label(for='aulasTeoricas') Aulas Teóricas:
      input(type='text', id='aulasTeoricas', name='aulasTeoricas' placeholder='Separadas por vírgula' required)

      label(for='aulasPraticas') Aulas Práticas:
      input(type='text', id='aulasPraticas', name='aulasPraticas' placeholder='Separadas por vírgula' required)

      label(for='avaliacao') Avaliação:
      input(type='text', id='avaliacao', name='avaliacao' placeholder='Separada por vírgula' required)

      label(for='dataTeste') Data do Teste:
      input(type='text', id='dataTeste', name='dataTeste' required)

      label(for='dataExame') Data do Exame:
      input(type='text', id='dataExame', name='dataExame' required)

      label(for='dataProjeto') Data do Projeto:
      input(type='text', id='dataProjeto', name='dataProjeto' required)

      button(type='submit') Adicionar UC
