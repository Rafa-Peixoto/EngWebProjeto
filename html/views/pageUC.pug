        h2 Aulas
        table.w3-table-all
          tr
            th Tipo
            th Data
            th Sumário
            
            each aula in uc.aulas
                tr
                    //- td 
                    //-     a(href="/" + contrato._id)= contrato._id
                    td= aula.tipo
                    td= aula.data
                    td= aula.sumario

