                li
                    b Docentes: 
                    span= uc.docentes
                li
                    b Horário: 
                    span= uc.horario
                li 
                    b Avaliação: 
                    span= uc.avaliacao
                li
                    b Datas: 
                    span= uc.datas
    
    br
